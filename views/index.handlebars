<div class="container">
  <h3 class="text-light text-center"><i class="fas fa-question-circle text-warning"></i> 你想向誰說幹話 <i
      class="fas fa-question-circle text-warning"></i></h3>
  <!-- set form method -->
  <form action="/" method="POST">
    <div class="row mt-4" id="data-panel">

      <div class="col-sm-4">
        <div class="card shadow-lg mb-4">
          <img class="card-img-top "
            src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
            alt="Card image cap">
          <div class="card-body mx-auto">
            <!-- option engineer -->
            <div class="form-check">
              <input class="form-check-input" type="radio" name="option" id="engineer" value="engineer" checked>
              <label class="form-check-label" for="engineer"> <i class="fas fa-cogs"></i> 工程師</label>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card shadow-lg mb-4">
          <img class="card-img-top"
            src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
            alt="Card image cap">
          <div class="card-body mx-auto">
            <!-- option designer -->
            <div class="form-check">
              <input class="form-check-input" type="radio" name="option" id="designer" value="designer">
              <label class="form-check-label" for="designer"> <i class="fas fa-palette"></i> 設計師</label>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card shadow-lg mb-4">
          <img class="card-img-top"
            src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
            alt="Card image cap">
          <div class="card-body mx-auto">
            <!-- option entrepreneur -->
            <div class="form-check">
              <input class="form-check-input" type="radio" name="option" id="entrepreneur" value="entrepreneur">
              <label class="form-check-label" for="entrepreneur"> <i class="fas fa-briefcase"></i> 創業家</label>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="row">
      <button class="btn btn-info btn-lg" type="submit">產生器</button>
      <div class="col">
        <!-- display rubbish talk -->
        {{#if talk}}
        <code>{{talk}}</code>
        {{/if}}
      </div>
    </div>
  </form>
</div>